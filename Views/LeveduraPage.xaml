<ContentPage 
    x:Class="bebrewery.Views.LeveduraPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:bebrewery.ViewModels"
             >

    <ContentPage.BindingContext>
        <vm:LeveduraPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Tipo de Levedura" FontAttributes="Bold" />
            <Entry Placeholder="Ex: Safale US-05"
                   Text="{Binding Tipo}" />

            <Label Text="Estilo" FontAttributes="Bold" />
            <Entry Placeholder="Ex: Ale"
                   Text="{Binding Estilo}" />

            <Label Text="Atenuação (%)" FontAttributes="Bold" />
            <Entry Placeholder="Ex: 75"
                   Keyboard="Numeric"
                   Text="{Binding Atenuacao}" />

            <Label Text="Temperatura Ideal (°C)" FontAttributes="Bold" />
            <Entry Placeholder="Ex: 18"
                   Keyboard="Numeric"
                   Text="{Binding TempIdeal}" />

            <Button Text="Salvar"
                    Command="{Binding SalvarCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
